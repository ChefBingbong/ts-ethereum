{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "#prometheus-gc-stats-wrapper": ["../metrics/src/metric-wrappers/node.ts"],
      "@ts-ethereum/block": ["../block/src/index.ts"],
      "@ts-ethereum/blockchain": ["../blockchain/src/index.ts"],
      "@ts-ethereum/chain-config": ["../chain-config/src/index.ts"],
      "@ts-ethereum/consensus": ["../consensus/src/index.ts"],
      "@ts-ethereum/db": ["../db/src/index.ts"],
      "@ts-ethereum/evm": ["../evm/src/index.ts"],
      "@ts-ethereum/execution-client": ["../execution-client/src/index.ts"],
      "@ts-ethereum/kademlia": ["../kademlia/src/index.ts"],
      "@ts-ethereum/metrics": ["../metrics/src/index.ts"],
      "@ts-ethereum/mpt": ["../merkel-trie/src/index.ts"],
      "@ts-ethereum/p2p": ["../p2p/src/index.ts"],
      "@ts-ethereum/rlp": ["../rlp/src/index.ts"],
      "@ts-ethereum/state-manager": ["../state-manager/src/index.ts"],
      "@ts-ethereum/tx": ["../tx/src/index.ts"],
      "@ts-ethereum/utils": ["../utils/src/index.ts"],
      "@ts-ethereum/vm": ["../vm/src/index.ts"]
    }
  },
  "include": ["src", "bin"],
  "exclude": ["node_modules", "dist", "_types", "_cjs", "_esm"]
}

