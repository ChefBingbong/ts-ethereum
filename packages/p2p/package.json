{
  "name": "@ts-ethereum/p2p",
  "version": "0.0.0",
  "license": "ISC",
  "type": "module",
  "main": "./index.ts",
  "module": "./_esm/index.js",
  "types": "./_types/index.d.ts",
  "typings": "./_types/index.d.ts",
  "exports": {
    ".": {
      "types": "./_types/index.d.ts",
      "import": "./index.ts",
      "require": "./_cjs/index.js",
      "default": "./index.ts"
    }
  },
  "files": [
    "*"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/ChefBingbong/simple-p2p-blockchain.git",
    "directory": "packages/p2p"
  },
  "scripts": {
    "check": "tsc --pretty --noEmit",
    "clean": "rm -rf ./_esm ./_cjs ./_types node_modules",
    "build": "bun build:cjs && bun build:esm && bun build:types",
    "build:cjs": "tsc --project ./tsconfig.json --module commonjs --moduleResolution node --outDir ./_cjs --removeComments --verbatimModuleSyntax false && printf '{\"type\":\"commonjs\"}' > ./_cjs/package.json",
    "build:esm": "tsc --project ./tsconfig.json --outDir ./_esm && printf '{\"type\": \"module\",\"sideEffects\":false}' > ./_esm/package.json",
    "build:types": "tsc --project ./tsconfig.json --declarationDir ./_types --emitDeclarationOnly --declaration --declarationMap",
    "test": "vitest run -c ./vitest.config.mjs"
  },
  "dependencies": {
    "@libp2p/crypto": "^5.1.13",
    "@libp2p/interface": "^3.1.0",
    "@libp2p/interface-internal": "^3.0.9",
    "@libp2p/peer-id": "^6.0.4",
    "@libp2p/utils": "^7.0.9",
    "@ts-ethereum/block": "workspace:*",
    "@ts-ethereum/chain-config": "workspace:*",
    "@ts-ethereum/kademlia": "workspace:*",
    "@ts-ethereum/rlp": "workspace:*",
    "@ts-ethereum/tx": "workspace:*",
    "@ts-ethereum/utils": "workspace:*",
    "@ts-ethereum/vm": "workspace:*",
    "debug": "^4.3.4",
    "ethereum-cryptography": "^3.2.0",
    "eventemitter3": "^5.0.1",
    "libp2p": "^3.1.2",
    "snappyjs": "^0.7.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/debug": "^4.1.12",
    "@types/snappyjs": "^0.7.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=24"
  }
}